{
  "name": "@docvhcmc/react-form-schema",
  "version": "0.1.0",
  "description": "A flexible React form schema manager with pluggable validation adapters (Zod, Yup, etc.)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./zod4": {
      "import": {
        "types": "./dist/zod4.d.ts",
        "default": "./dist/zod4.mjs"
      },
      "require": {
        "types": "./dist/zod4.d.ts",
        "default": "./dist/zod4.js"
      }
    },
    "./zod3": {
      "import": {
        "types": "./dist/zod3.d.ts",
        "default": "./dist/zod3.mjs"
      },
      "require": {
        "types": "./dist/zod3.d.ts",
        "default": "./dist/zod3.js"
      }
    },
    "./yup": {
      "import": {
        "types": "./dist/yup.d.ts",
        "default": "./dist/yup.mjs"
      },
      "require": {
        "types": "./dist/yup.d.ts",
        "default": "./dist/yup.js"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/adapters/zod3/index.ts src/adapters/zod4/index.ts --format cjs,esm --dts --clean --out-dir dist",
    "dev": "tsup src/index.ts src/adapters/zod3/index.ts src/adapters/zod4/index.ts --format cjs,esm --dts --watch --out-dir dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react",
    "form",
    "schema",
    "validation",
    "zod",
    "yup",
    "joi",
    "ssr",
    "nextjs",
    "typescript",
    "hooks",
    "form-management"
  ],
  "author": "docv.hcm@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/docvhcmc/react-form-schema.git"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "zod": ">=3.0.0 <5.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "tsup": "^8",
    "typescript": "^5",
    "zod": "^3.0.0",
    "yup": "^1.0.0",
    "joi": "^17.0.0",
    "@types/yup": "^0.32.0",
    "@types/joi": "^17.2.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
